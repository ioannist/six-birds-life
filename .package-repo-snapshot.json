{
  "allowed_roots": {
    "assets": {
      "extensions": [".json", ".yml", ".yaml", ".csv", ".txt", ".md"]
    },
    "docs": {
      "extensions": [".tex", ".md", ".pdf", ".png", ".jpg", ".jpeg"]
    },
    "figures": {
      "extensions": [".pdf", ".png", ".jpg", ".jpeg", ".svg"]
    },
    "scripts": {
      "extensions": [".sh", ".py", ".txt"]
    }
  },
  "allowed_root_files": [
    "STYLE_CONTRACT.md",
    "README.md",
    "refs.bib",
    ".gitignore",
    "paper.tex",
    ".package-repo-snapshot.json"
  ],
  "exclude_dirs": [
    ".git",
    ".lake",
    ".venv",
    "venv",
    "__pycache__",
    ".mypy_cache",
    ".pytest_cache",
    ".ruff_cache",
    ".ipynb_checkpoints"
  ]
}
